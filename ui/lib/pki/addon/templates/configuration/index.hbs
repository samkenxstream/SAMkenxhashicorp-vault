<SecretListHeader
  @model={{this.model}}
  @backendCrumb={{hash
    label=this.model.id
    text=this.model.id
    path="vault.cluster.secrets.backend.list-root"
    model=this.model.id
  }}
  @isEngine={{true}}
/>
{{! <Toolbar>
  <ToolbarActions>
    <ToolbarLink @route="configuration.tidy">
      Tidy
    </ToolbarLink>
    <ToolbarLink @route="configuration.edit">
      Edit configuration
    </ToolbarLink>
  </ToolbarActions>
</Toolbar> }}

